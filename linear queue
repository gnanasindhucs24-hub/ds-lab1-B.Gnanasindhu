#include <stdio.h>
#define max 100

int q[max];
int front=-1,rear=-1;
void insert(int element){
    if(rear==max-1){
            printf("queue is overflow");
    }
    else{
            if(front==-1&&rear==-1)
            front=0;
            rear++;
            q[rear]=element;
            printf("%d element is inserted in queue",element);
    }
}
void delete(){
    if(front==-1||front>rear){
            printf("queue is underflow\n");
    }
    else{
            printf("%d element is delete from queue\n",q[front]);
    front++;
    }
}
void display(){
    if(front==-1||front>rear){
            printf("queue is empty\n");
    }
    else{
            printf("Queue elements\n");
    for(int i=front;i<=rear;i++){
            printf("%d",q[i]);
    }
    printf("\n");
    }
}
int main(){
    int choice,element,size;
    printf("enter the size of queue\n");
    scanf("%d",&size);
    do{
            printf("linear queue menu\n");
    printf("1.insert\n,2.delete\n,3.display\n,4.exit\n");
    printf("enter the choice");
    scanf("%d",&choice);
    switch(choice){
    case 1:
        if(rear>size-1){
                printf("queue overflow");
        }
        else{
                printf("�nter the element to insert");
        scanf("%d",&element);
        insert(element);
        }
        break;
    case 2:
        delete();
        break;
    case 3:
        display();
        break;
    case 4:
        printf("exit\n");
        break;
    default:
        printf("�nvalid\n");
        break;
    }
    }while(choice!=4);
    return 0;
}



